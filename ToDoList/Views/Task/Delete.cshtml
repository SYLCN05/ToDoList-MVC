@model Taak



<div class=" d-flex align-content-center justify-content-sm-center" style="margin-top:20px;">
    <form class="d-flex flex-column w-50 justify-content-sm-center" method="post" asp-action="DeletePost">
        <h1 class="text-center text-body" style="font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif">Delete TO DO LIST Taak</h1>
        @* <div asp-validation-summary="All"></div> *@
        <input asp-for="Id" hidden />
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" id="title" type="text" placeholder="Title" disabled />
        <label asp-for="Description">beschrijving</label>
        <textarea asp-for=Description class="form-control" id="beschrijving" placeholder="beschrijving" disabled ></textarea>
        <label asp-for="Type">Type taak</label>
        <select asp-for="Type" class="form-select" disabled>
            <option>Normaal</option>
            <option>Urgent</option>
            <option>Onzeker</option>
        </select>
        <input class="btn btn-danger " type="submit" name="versturen" value="Delete" asp-controller="Task" asp-action="DeletePost" style="top:20px" />
        <a class="btn btn-primary" style="position:relative; bottom:-40px;" asp-controller="Home" asp-action="Index">Terug naar overzicht</a>
    </form>
</div>
@section Scripts {

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

